{% extends '::base.html.twig' %}

{% block content %}
<div class="row-fluid">
    <div class="span12">
        <h3>Liste des boissons</h3>

        <table class="table table-striped table-bordered table-condensed">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Prix d'achat</th>
                <th>Prix de vente</th>
                <th>Quantity</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for drink in drinks %}
            <tr>
                <td>{{ drink.name }}</td>
                <td>{{ drink.formattedPurchasePrice }}</td>
                <td>{{ drink.formattedSalePrice }}</td>
                <td>{{ drink.quantity }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('backend_drink_delete', { id: drink.id }) }}">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('backend_drink_new') }}">Ajouter</a>
    </div>
</div>
{% endblock %}
